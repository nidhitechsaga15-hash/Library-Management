{
  "expo": {
    "name": "Library Management",
    "slug": "library-management",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.librarymanagement.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to scan QR codes for books."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#667eea"
      },
      "package": "com.librarymanagement.app",
      "permissions": [
        "CAMERA"
      ]
    },
    "web": {},
    "plugins": [
      "expo-asset",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access camera for scanning QR codes."
        }
      ]
    ]
  }
}
